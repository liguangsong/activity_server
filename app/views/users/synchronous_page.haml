%meta(hidden="refresh" content="3000" )
=render "layouts/header"
%div(class="user-div-3" )
  %div(class="user-div-4" )
    =link_to '首页',user_path(@user_id)
    %span(style="color:gray") / 同步展示

%div(class="index-action user-result-div-1"  )
  %div(class="user-result-1" )
    %div(style="padding-top:10px" )
      -if @result["phone"]!=""
        %h1
          =@bid["activity_name"]
        %h3
          比赛结果：
        %h5
          获胜者 :
          =@result["name"]
          %br
          出价：
          =@result["price"]
          元
          %br
          电话号：
          =@result["phone"]
      -if @result["name"]=="竞价失败"&&@result["phone"]==""
        %h1
          =@bid["activity_name"]
        %h3
          比赛结果：
        %h4
          本次竞价无人胜出
      -if @result["name"]=="竞价正在经行"
        %h1
          =@bid["activity_name"]
        %h3
          %span 参加人数：
          =@bid["number"]
          %span /
          =@bid["sign_up_number"]
%div(class="index-action user-list-2")
  -if @result["name"]=="竞价正在经行"
    %table(class="table table-style user-table" )
      %tbody
        %tr
          %th 姓名
          %th 手机号
        %br
          %ul
            -@bidding.each do |t|
              %tr
                %th
                  =t.name
                %th
                  =t.phone
              %br
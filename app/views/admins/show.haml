%div
  %h1
    活动通
  %p(class="header-right"style="margin-top:1%")
    你好，
    =@admin[:name]
    =link_to '退出',admins_quit_path
  %div(class="index-action" style="width:1050px;height:480px;background-color:#F0F0F0;margin-left:10%;margin-top:2%;padding:0px;padding-bottom:2px" )
    %div(class="header-left"style="margin-left:1px;margin-top:10px"  )
      管理用户
      %button(style="margin-left:3px" )
        =link_to '添加用户',admins_add_new_user_page_path(@admin[:id]) ,:style =>'color:black'
    %table(class="table table-style"style="margin-top:1px;position:absolute;top:9%" )
      %tbody
        %tr
          %th 编号
          %th 用户名
          %th
        %br
          %ul
            -i=0
            -@user.each do |t|
              %tr
                -i=i+1;
                %th
                  =i
                %th
                  =t.name
                %th(style="width:20%" )

                  =link_to '删除'  ,admin_path(t.id),method: :delete, data: { confirm: 'Are you sure?'}
                  %span

                  =link_to '修改密码'
              %br
    %div(style='font-size:12px;position:absolute;right:5%;bottom:-10px;')
      .right-padding
        = will_paginate @user


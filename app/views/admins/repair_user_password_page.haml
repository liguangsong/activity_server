%h1活动通
%p(class="header-right"style="margin-top:1%")
  你好，
  =session[:admin]
  =link_to '退出',admins_quit_path
%div(style="background-color:#e8e8e8;width:700px;height:50px;width:100%" )
  %div(style="height:25px;margin-top:12px;position:absolute;margin-left:3%" )
    =link_to '首页' ,admin_path(@id)
    %span(style="color:gray") / 修改密码

%div(class="index-action" style="text-align:center;width:550px;background-color:#e8e8e8;margin-left:30%;margin-top:5%;padding:20px")
  %div(class="index-login"style="margin-top:10px" )
    %div(class="input-prepend"style="margin:30px")
      = form_for :users_password,url:admins_repair_user_password_path(@user[:name]) do |f|
        = f.label '帐  号',:class=>"add-on",:style=>"height:10%;width:100px"
        = f.text_field :name,:style=>"height:10%;width:70%",:value=>@user[:name],:disabled=>'true'

        %br
        %br
        = f.label "请设置密码",:class=>"add-on",:style=>"height:10%;width:100px"
        = f.text_field :password ,:type=>"password",:style=>"height:10%;width:70%"
        %br
        %br
        = f.label '请确认密码',:class=>"add-on",:style=>"height:10%;width:100px"
        = f.text_field :password_confirmation,:type=>"password",:style=>"height:10%;width:70%"
        %br
        %div(style="text-align:center;")
          %br
          = f.submit "提 交", class: "btn-primary",:style=>"width:90%"
          %br
    -if flash[:error]
      .label-warning(style="width:70%;margin-left:15%;background-color:#FFE4E1;" )
        %p(style="color:#7E4F05;font-size:16px" )
          =flash[:error]
    -if @user.errors.any?&&!flash[:error]
      .label-warning(style="width:70%;margin-left:15%;background-color:#FFE4E1;" )
        %p(style="color:#7E4F05;font-size:16px" )
          = @user.errors.first[1]
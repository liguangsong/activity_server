  活动列表
  %div(class = "header-right" ng-tap="jump_creat_activity()")
    %a( class="btn btn-primary")
      创建活动
%div(class="index-menu" )
  %div(id="wrapper" class="wrapper scrollable" )
    %div(class="wrapper-inner")
      %div(class="form-wrapper")
        %ul(class="list-style-2" style="-webkit-transition: -webkit-transform 0ms; transition: -webkit-transform 0ms; -webkit-transform-origin: 0px 0px; -webkit-transform: translate3d(0px, 0px, 0);" )
          %li( id="{{list.name}}" ng-repeat="list in eventList" ng-tap="jump_auction(list)" class="{{list.status}}" )
            %h3
              {{list.activity_name}}



